<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SampleProject" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/orangeColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>

        <item name="colorControlHighlight">@color/colorHalfTransparentPrimary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_right_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/backgroundStatusbarColorDarkTheme</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">
            @color/backgroundMainColorDarkTheme
        </item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--        for snackBar-->
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>

        <!--        for CheckBox-->
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>

        <item name="android:textColorPrimary">@color/whiteColor</item>

    </style>

    <style name="Theme.StartActivity" parent="Theme.SampleProject">
        <!-- Status bar color -->
        <item name="android:statusBarColor">
            @color/backgroundStatusbarColorForAuthenticationScreenDarkTheme
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/backgroundToolbarColorDarkTheme</item>
    </style>

    <style name="IconStyle">
        <item name="android:tint">@color/whiteColor</item>
    </style>

    <style name="BackgroundRootStyle">
        <item name="android:background">@color/blackColor</item>
        <item name="cardBackgroundColor">@color/blackColor</item>
    </style>

    <style name="BackgroundRootAutenticationPagesStyle">
        <item name="android:background">@drawable/background_splash_dark_theme</item>
    </style>

    <style name="BackgroundToolbarStyle">
        <item name="android:background">@color/backgroundToolbarColorDarkTheme</item>
    </style>

    <style name="BackgroundRowStyle">
        <item name="cardBackgroundColor">@color/backgroundRowColorDarkTheme</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.MaterialComponents.Snackbar.TextView</item>
        <item name="actionTextColorAlpha">1</item>

    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_margin">16dp</item>
        <item name="animationMode">slide</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="fontFamily">@font/iransans_bold</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="rippleColor">@color/whiteColor</item>
    </style>

    <style name="Widget.MaterialComponents.Snackbar.TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/iransans_bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/size_font_title3</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="animationMode">slide</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--    ***************************End Snackbar*****************************-->

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorBackgroundEditText</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/size_radius_editText</item>
        <item name="boxCornerRadiusBottomStart">@dimen/size_radius_editText</item>
        <item name="boxCornerRadiusTopEnd">@dimen/size_radius_editText</item>
        <item name="boxCornerRadiusTopStart">@dimen/size_radius_editText</item>
        <item name="boxStrokeColor">@color/colorPrimaryText</item>
        <item name="boxStrokeErrorColor">@color/colorAccent</item>
        <item name="errorIconTint">@color/colorAccent</item>
        <item name="errorTextColor">@color/colorAccent</item>
        <item name="android:textDirection">locale</item>
        <item name="android:layoutDirection">locale</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="iconGravity">start</item>
        <item name="counterEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="iconTint">@color/colorPrimaryText</item>
        <item name="hintTextColor">@color/colorPrimaryText</item>
    </style>

    <!--    ******************************For Button********************************-->

    <style name="TextAppearance.App.Button" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="fontFamily">@font/iransans_bold</item>
        <item name="android:fontFamily">@font/iransans_bold</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="rippleColor">@color/whiteColor</item>
    </style>

    <style name="styleMyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/size_title_button</item>
        <item name="elevationOverlayColor">@color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="minHeight">@dimen/max_height_editText</item>
        <item name="rippleColor">@color/whiteColor</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">@dimen/size_stroke_width_button</item>
        <item name="cornerRadius">@dimen/size_radius_card_view</item>
        <item name="android:fontFamily">@font/iransans_bold</item>
        <item name="fontFamily">@font/iransans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
    </style>


    <!--    ***************************For ProgressBar********************************-->

    <style name="CircularProgressIndicatorSmall" parent="Widget.MaterialComponents.CircularProgressIndicator.Small">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
        <item name="trackThickness">3dp</item>
        <item name="trackCornerRadius">2dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/colorButtonText</item>
        <item name="indicatorColor">@color/colorButtonText</item>
    </style>


    <!--    *********************************Navigation Bottom **********************-->

    <style name="NavigationBottomStyle">
        <item name="android:background">@drawable/layout_top_corner_round_dark</item>
        <item name="itemIconTint">@drawable/bottom_nav_dark_theme</item>
        <item name="itemTextColor">@drawable/bottom_nav_dark_theme</item>

    </style>

    <style name="BottomNavigationViewDetail" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/size_font_title3</item>
        <item name="fontFamily">@font/iran_sans</item>
    </style>
    <!--    ********************************Bottom Navigation Fragment ***************-->
    <style name="AppBottomSheetDialogThemeTopCorner" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyleTopCorner</item>
        <item name="android:statusBarColor">@android:color/transparent
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">
            @color/backgroundMainColorDarkTheme
        </item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:textColorPrimary">@color/whiteColor</item>
    </style>

    <style name="AppModalStyleTopCorner" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/layout_top_corner_round_dark</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="AppBottomSheetDialogThemeTransparent" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyleTransparent</item>
        <item name="android:statusBarColor">@android:color/transparent
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
    </style>

    <style name="AppModalStyleTransparent" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!--    ****************For CheckBox **********************************-->
    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="fontFamily">@font/iransans_bold</item>
    </style>

</resources>