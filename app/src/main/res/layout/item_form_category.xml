<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:minHeight="@dimen/max_height_editText"
    app:cardBackgroundColor="@color/colorBackgroundRow"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="18dp"
            android:gravity="right|center_vertical"
            android:minHeight="@dimen/min_height_textView"
            android:text="فرم پرسشگری از مشکلات سلامت مردم منطقه رویدر"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/body_size_font" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chgFormList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            app:singleSelection="true" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>