<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.millennium.sampleProject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="ir.millennium.sampleProject.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SampleProject"
        android:usesCleartextTraffic="true"
        tools:replace="android:supportsRtl,android:icon"
        tools:targetApi="m">

        <activity
            android:name="ir.millennium.sampleProject.presentation.activity.StartActivity"
            android:exported="true"
            android:theme="@style/Theme.StartActivity"
            tools:node="merge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="ir.millennium.sampleProject.presentation.activity.mainActivity.MainActivity"
            android:exported="false">

        </activity>

    </application>

</manifest>